<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TO-GATHER: USER</title>
    <%- include('./partials/css'); %>
    <link rel="stylesheet" type="text/css" href="../stylesheets/user.css">
</head>
<body>
    <div class="container">
        <%- include('./partials/header'); %>
    </div>
    <main class="d-flex justify-content-center">
        <div class="profile card mb-4">
            <h5 class="card-header">Profile</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">
                    <div class="d-flex justify-content-center m-2">
                        <div class="avatar position-relative">
                            <img class="border" id="avatar" />
                            <span class="position-absolute bottom-0 start-50 translate-middle badge rounded-pill bg-secondary fs-5" role="button" data-bs-toggle="modal" data-bs-target="#avatar-modal"><i class="bi bi-camera-fill"></i></span>
                        </div>
                    </div>
                </li>
                <div class="modal fade" id="avatar-modal" tabindex="-1" aria-labelledby="avatar-model-label" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="avatar-model-label">Change avatar</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body text-center">
                            <div class="avatar m-auto">
                                <img class="border" id="avatar-preview" />
                            </div>
                            <input class="my-2" id="avatar-file" type="file" >
                            <div id="avatar-action-msg" style="font-size: 0.85rem;"></div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" id="upload-avatar" disabled>Upload avatar</button>
                        </div>
                    </div>
                    </div>
                </div>
                <li class="list-group-item">
                    <div class="d-flex align-items-cente">
                        <div class="w-25 p-2">Email</div>
                        <div class="p-2" id="email"></div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="d-flex align-items-center">
                        <div class="w-25 p-2">Name</div>
                        <div class="p-2" id="name"></div>
                        <div class="ms-auto p-2" id="name-action" role="button"><i class="bi bi-pencil-fill" id="edit-name"></i></div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="d-flex align-items-center">
                        <div class="w-25 p-2">Password</div>
                        <div class="p-2" id="password">********</div>
                        <div class="ms-auto p-2" id="password-action" role="button"><i class="bi bi-pencil-fill" id="edit-password"></i></div>
                    </div>
                </li>
            </ul>
            <div class="card-footer d-flex justify-content-center">
                <button type="button" class="btn btn-primary mx-2" id="sign-out">Sign out</button>
            </div>
        </div>
    </main>
    <%- include('./partials/footer'); %>
    <%- include('./partials/loading'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="../javascripts/profile.js" type="module"></script>
</body>
</html>